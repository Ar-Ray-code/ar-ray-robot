<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

<!-- Import Rviz colors -->
<xacro:include filename="$(find inverted_robot_description)/urdf/inverted_robot.material.xacro" />

<xacro:macro name="inverted_robot" params="parent *origin">
  <joint name="origin_to_link1" type="fixed">
    <xacro:insert_block name="origin" />
    <parent link="${parent}" />
    <child link="robot_base" />
    <axis xyz="0 0 1" />
  </joint>

  <!-- Link 1 -->
  <link name="robot_base">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://inverted_robot_description/meshes/toritsu_plate_with_430.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://inverted_robot_description/meshes/toritsu_plate_with_430.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="3.0876154e-04 0.0000000e+00 -1.2176461e-04" />
      <mass value="7.9119962e-02" />
      <inertia ixx="1.2505234e-05" ixy="0.0" ixz="-1.7855208e-07"
               iyy="2.1898364e-05" iyz="0.0"
               izz="1.9267361e-05" />
    </inertial>
  </link>


  <!--  Link 2 -->
  <link name="wheel0">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.57079632679 0"/>
      <geometry>
        <mesh filename="package://inverted_robot_description/meshes/wheel_60mm.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 1.57079632679 0"/>
      <geometry>
        <mesh filename="package://inverted_robot_description/meshes/wheel_60mm.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>

     <inertial>
      <origin xyz="-3.0184870e-04 5.4043684e-04 0.047433464e-02" />
      <mass value="9.8406837e-02" />
      <inertia ixx="3.4543422e-05" ixy="-1.6031095e-08" ixz="-3.8375155e-07"
               iyy="3.2689329e-05" iyz="2.8511935e-08"
               izz="1.8850320e-05" />
    </inertial>
  </link>


  <link name="wheel1">
    <visual>
        <origin xyz="0 0 0" rpy="0 1.57079632679 0"/>
        <geometry>
          <mesh filename="package://inverted_robot_description/meshes/wheel_60mm.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey"/>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 1.57079632679 0"/>
        <geometry>
          <mesh filename="package://inverted_robot_description/meshes/wheel_60mm.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

       <inertial>
        <origin xyz="-3.0184870e-04 5.4043684e-04 0.047433464e-02" />
        <mass value="9.8406837e-02" />
        <inertia ixx="3.4543422e-05" ixy="-1.6031095e-08" ixz="-3.8375155e-07"
                 iyy="3.2689329e-05" iyz="2.8511935e-08"
                 izz="1.8850320e-05" />
      </inertial>
  </link>

  <!-- Joint 1 -->
  <joint name="joint1" type="revolute">
    <parent link="robot_base"/>
    <child link="wheel0"/>
    <origin xyz="0.057 0 -0.036" rpy="0 0 3.14159265359"/>
    <axis xyz="-1 0 0"/>
    <limit velocity="4.8" effort="1" lower="1.40" upper="2.0" />
  </joint>
  <!--  Joint 2 -->
  <joint name="joint2" type="revolute">
    <parent link="robot_base"/>
    <child link="wheel1"/>
    <origin xyz="-0.057 0 -0.036" rpy="0 0 0"/>
    <axis xyz="-1 0 0"/>
    <limit velocity="4.8" effort="1" lower="1.40" upper="2.0" />
  </joint>

</xacro:macro>
</robot>